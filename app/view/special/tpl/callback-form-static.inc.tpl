{strip}
<div class="feedback-form-static js__form">
    <div class="feedback-form-static__container">
        <form class="simple-form js__form" data-action="callback" data-goal="send-callback-form" data-resetonsubmit="1">
            <div class="sf__field">
                <label>
                    <div class="sf__field-name">Ваше имя:</div>
                    <input class="sf__input js__input required" type="text" name="name" placeholder="Ф.И.О." />
                </label>
            </div>
            <div class="sf__field">
                <label>
                    <div class="sf__field-name">Электронная почта:</div>
                    <input class="sf__input js__input" type="text" name="email" placeholder="E-mail" />
                </label>
            </div>
            <div class="sf__field">
                <label>
                    <div class="sf__field-name">Сообщение:</div>
                    <textarea class="sf__textarea js__input" name="comment" placeholder="Сообщение"></textarea>
                </label>
            </div>
            <div class="sf__buttons flex ff-rw jc-sa ai-c">
                <a class="button button--white sf__button js__submit-form">ОТПРАВИТЬ</a>
            </div>
        </form>
    </div>
</div>
{/strip}